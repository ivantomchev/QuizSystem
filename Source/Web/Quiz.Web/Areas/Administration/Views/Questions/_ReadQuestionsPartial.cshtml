@model IEnumerable<Quiz.Web.Areas.Administration.ViewModels.Questions.QuestionIndexViewModel>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Quote)
            </th>
            <th class="danger">Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Quote)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", "Questions", new { area = Quiz.Common.GlobalConstants.AdminArea, id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", "Questions", new { area = Quiz.Common.GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-default" })
                    @Html.ActionLink("Permanent Delete", "ActualDelete", "Questions", new { area = Quiz.Common.GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

