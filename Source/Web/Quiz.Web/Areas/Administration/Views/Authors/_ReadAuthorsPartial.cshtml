@model IEnumerable<Quiz.Web.Areas.Administration.ViewModels.Authors.AuthorIndexViewModel>
<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="danger">Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", "Authors", new { area = GlobalConstants.AdminArea, id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", "Authors", new { area = GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-default" })
                    @Html.ActionLink("Permanent Delete", "ActualDelete", "Authors", new { area = GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_PaginationPartial")

@Scripts.Render("~/bundles/item-delete")


